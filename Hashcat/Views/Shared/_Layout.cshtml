    <script>
        $(document).ready(function () {
            $(".triangle-text").click(function (e) {
                e.preventDefault();
                var targetId = $(this).attr("href");
                var offset = 80;
                $("html, body").animate({
                    scrollTop: $(targetId).offset().top - offset
                }, 500);
            });
            $(".up").click(function (e) {
                e.preventDefault();
                var targetId = "#faq-up";
                var offset = 80;
                $("html, body").animate({
                    scrollTop: $(targetId).offset().top - offset
                }, 500);
            });
        });
    </script>
    
