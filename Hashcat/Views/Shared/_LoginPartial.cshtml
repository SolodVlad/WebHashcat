@using Domain.Models;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul>
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" href="@Url.Action("Logout", "Account", new {Area = "Identity"})">
            <button type="submit" class="nav-link btn btn-link text-dark">Вихід</button>
        </form>
    </li>
}
else
{
    <li>
        <a href="@Url.Action("Login", "Account", new {Area = "Identity"})">Авторизація</a>
    </li>
}
</ul>