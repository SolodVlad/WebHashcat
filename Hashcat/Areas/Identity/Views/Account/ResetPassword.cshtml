@model WebHashcat.Models.ResetPassword
@{
    ViewData["Title"] = "Log in";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <input asp-for="Email" type="hidden" value="@Model.Email" id="resetEmail" class="form-control" />

        <div class="form-group">
            <label asp-for="NewPassword" class="control-label">New password:</label>
            <input asp-for="NewPassword" id="newPassword" type="password" class="form-control" required />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Confirm new password:</label>
            <input id="confirmNewPassword" type="password" class="form-control" required />
            <span class="text-danger"></span>
        </div>

        <input asp-for="Token" type="hidden" value="@Model.Token" id="resetToken" class="form-control" />

        <div class="form-group">
            <input type="button" value="Reset password" id="resetPasswordBtn" class="btn btn-primary" />
        </div>
    </div>
</div>